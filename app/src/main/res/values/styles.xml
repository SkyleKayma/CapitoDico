<resources>
    <!-- Base application theme. -->
    <style name="CapitoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/Spinner.ItemStyle</item>
    </style>

    <!-- Fonts Base-->

    <style name="CapitoTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body" parent="CapitoTheme.TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body2" parent="CapitoTheme.TextAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Title" parent="CapitoTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CapitoTheme.TextAppearance.LittleTitle" parent="CapitoTheme.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Font implements -->

    <style name="CapitoTheme.TextAppearance.Body.Regular" parent="CapitoTheme.TextAppearance.Body">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body.Medium" parent="CapitoTheme.TextAppearance.Body">
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="fontFamily">@font/metropolis_medium</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body.Bold" parent="CapitoTheme.TextAppearance.Body">
        <item name="android:fontFamily">@font/metropolis_bold</item>
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body2.Regular" parent="CapitoTheme.TextAppearance.Body2">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body2.Medium" parent="CapitoTheme.TextAppearance.Body2">
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="fontFamily">@font/metropolis_medium</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Body2.Bold" parent="CapitoTheme.TextAppearance.Body2">
        <item name="android:fontFamily">@font/metropolis_bold</item>
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Title.Regular" parent="CapitoTheme.TextAppearance.Title">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Title.Medium" parent="CapitoTheme.TextAppearance.Title">
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="fontFamily">@font/metropolis_medium</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Title.Bold" parent="CapitoTheme.TextAppearance.Title">
        <item name="android:fontFamily">@font/metropolis_bold</item>
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapitoTheme.TextAppearance.LittleTitle.Regular" parent="CapitoTheme.TextAppearance.LittleTitle">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CapitoTheme.TextAppearance.LittleTitle.Medium" parent="CapitoTheme.TextAppearance.LittleTitle">
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="fontFamily">@font/metropolis_medium</item>
    </style>

    <style name="CapitoTheme.TextAppearance.LittleTitle.Bold" parent="CapitoTheme.TextAppearance.LittleTitle">
        <item name="android:fontFamily">@font/metropolis_bold</item>
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Toolbar" parent="CapitoTheme.TextAppearance.Title.Medium">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CapitoTheme.TextAppearance.Spinner" parent="CapitoTheme.TextAppearance.Title.Medium">
        <item name="android:textColor">@color/ca_text_light_primary</item>
    </style>

    <!-- Buttons -->

    <style name="Button.BaseUnelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">@style/CapitoTheme.TextAppearance.Body.Regular</item>
    </style>

    <!-- SearchView -->

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <!-- Search Icon -->
        <item name="searchHintIcon">@null</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/ca_text_light_primary</item>
        <!-- Hint Text Color -->
        <item name="android:textColorHint">@color/ca_text_light_secondary</item>
        <!-- Clear Icon Color -->
        <item name="android:tint">@color/ca_text_light_primary</item>
    </style>

    <!-- BottomSheet-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/ca_background_dark</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ca_navbar</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner.ItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/CapitoTheme.TextAppearance.Spinner</item>
    </style>

</resources>